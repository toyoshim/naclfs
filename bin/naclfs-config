#!/bin/sh

function _wrap() {
  /bin/echo -n "-Xlinker --wrap -Xlinker $1 "
}

function libs() {
  /bin/echo -n "-L$1/../obj/$2 -lnaclfs"
  # _wrap "fcntl"
  # _wrap "mkdir"
  # _wrap "opendir"
  # _wrap "rewinddir"
  # _wrap "readdir"
  # _wrap "closedir"
  # _wrap "chdir"
}

function help() {
  echo "Usage: naclfs-config [--libs toolchain]"
  echo "  toolchain:"
  echo "    newlib-i686"
  echo "    newlib-x86_64"
}

case $1 in
  --libs) libs "`dirname $0`" $2;;
  *) help;;
esac

